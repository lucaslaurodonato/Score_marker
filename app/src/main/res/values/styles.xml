<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_default_player_one">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/shape_button_default</item>
        <item name="android:textColor">@color/amaranth</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_default_player_two">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/shape_button_default</item>
        <item name="android:textColor">@color/picton_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>